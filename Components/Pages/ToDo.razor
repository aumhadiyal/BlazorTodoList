@page "/todo"

@rendermode InteractiveServer
<div>
<h3>My List</h3>
<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone"/>
            <input disabled @bind="todo.Title"/>
            <button @onclick="() => Delete(todo)">x</button>
        </li>
    }
 </ul>
 </div>
 <div>
 <h6> Add here</h6>
<input @bind="newTodo" />
<button @onclick="Add">Add</button>
 </div>


@code
{
    List<TodoItem> todos = [];
    public string newTodo = string.Empty;
    public void Add()
    {
        todos.Add(new TodoItem() { Title = newTodo});
        newTodo = string.Empty;

    }
    public void Delete(TodoItem toDelete)
    {
        todos.Remove(toDelete);
        newTodo = string.Empty;
    }

    
}